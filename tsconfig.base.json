{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "ES2015.Promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ultimate-backend/core": ["libs/core/src/index.ts"],
      "@ultimate-backend/common": ["libs/common/src/index.ts"],
      "@ultimate-backend/cloud": ["libs/cloud/src/index.ts"],
      "@ultimate-backend/grpc": ["libs/grpc/src/index.ts"],
      "@ultimate-backend/loadbalancer": ["libs/loadbalancer/src/index.ts"],
      "@ultimate-backend/permissions": ["libs/permissions/src/index.ts"],
      "@ultimate-backend/cli": ["libs/cli/src/index.ts"],
      "@ultimate-backend/consul": ["libs/consul/src/index.ts"],
      "@ultimate-backend/zookeeper": ["libs/zookeeper/src/index.ts"],
      "@ultimate-backend/etcd": ["libs/etcd/src/index.ts"],
      "@ultimate-backend/config": ["libs/config/src/index.ts"],
      "@ultimate-backend/messaging": ["libs/messaging/src/index.ts"],
      "@ultimate-backend/redis": ["libs/redis/src/index.ts"],
      "@ultimate-backend": ["libs/event-store/src/index.ts"]
    },
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "exclude": ["node_modules", "tmp"]
}
