{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "ES2015.Promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ultimate-backend/core": ["packages/core/src/index.ts"],
      "@ultimate-backend/common": ["packages/common/src/index.ts"],
      "@ultimate-backend/cloud": ["packages/cloud/src/index.ts"],
      "@ultimate-backend/loadbalancer": ["packages/loadbalancer/src/index.ts"],
      "@ultimate-backend/permissions": ["packages/permissions/src/index.ts"],
      "@ultimate-backend/cli": ["packages/cli/src/index.ts"],
      "@ultimate-backend/consul": ["packages/consul/src/index.ts"],
      "@ultimate-backend/zookeeper": ["packages/zookeeper/src/index.ts"],
      "@ultimate-backend/etcd": ["packages/etcd/src/index.ts"],
      "@ultimate-backend/config": ["packages/config/src/index.ts"],
      "@ultimate-backend/messaging": ["packages/messaging/src/index.ts"],
      "@ultimate-backend/redis": ["packages/redis/src/index.ts"],
      "@ultimate-backend/event-store": ["packages/event-store/src/index.ts"],
      "@ultimate-backend/couchbase": ["packages/couchbase/src/index.ts"],
      "@ultimate-backend/client": ["packages/client/src/index.ts"],
      "@ultimate-backend/brakes": ["packages/brakes/src/index.ts"],
      "@ultimate-backend/nx-plugin": ["packages/plugin-nx/src/index.ts"],
      "@ultimate-backend/gateway": ["packages/gateway/src/index.ts"],
      "@ultimate-backend/create-ub-project": [
        "packages/create-ub-project/src/index.ts"
      ],
      "@ultimate-backend/bootstrap": ["packages/bootstrap/src/index.ts"]
    },
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "exclude": ["node_modules", "tmp"]
}
