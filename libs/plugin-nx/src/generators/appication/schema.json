{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNxNestApp",
  "title": "Nx Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the application.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the node application?"
    },
    "directory": {
      "description": "The directory of the new application.",
      "type": "string"
    },
    "language": {
      "type": "string",
      "description": "Provide the ub programming language",
      "enum": ["typescript", "golang", "rustlang"],
      "x-prompt": {
        "message": "Select ultimate backend app language?",
        "type": "list",
        "items": [
          {
            "value": "typescript",
            "label": "Typescript"
          },
          {
            "value": "golang",
            "label": "Go Lang (coming soon)"
          },
          {
            "value": "rustlang",
            "label": "Rust Lang (coming soon)"
          }
        ]
      },
      "default": "typescript"
    },
    "kind": {
      "type": "string",
      "description": "Provide the ub app type",
      "enum": ["api", "svc"],
      "x-prompt": {
        "message": "Which type of ultimate backend app would you like to generate?",
        "type": "list",
        "items": [
          {
            "value": "api",
            "label": "API"
          },
          {
            "value": "svc",
            "label": "Service"
          }
        ]
      },
      "default": "svc"
    },
    "transport": {
      "type": "string",
      "description": "What kind of service to service communication",
      "x-prompt": {
        "message": "What transport protocol for service to service communication?",
        "type": "list",
        "items": [
          {
            "value": "rest",
            "label": "REST"
          },
          {
            "value": "grpc",
            "label": "GRPC"
          }
        ]
      },
      "default": "grpc"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add dependencies to package.json."
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "eslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the application (used for linting)"
    },
    "frontendProject": {
      "type": "string",
      "description": "Frontend project that needs to access this application. This sets up proxy configuration."
    }
  },
  "required": []
}
