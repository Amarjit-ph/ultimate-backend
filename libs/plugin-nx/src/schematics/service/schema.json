{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNxUBApp",
  "title": "Ultimate-Backend Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the service app.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What would you like to name the service?"
    },
    "directory": {
      "description": "The directory of the new service.",
      "type": "string"
    },
    "port": {
      "x-prompt": "What is the service port?",
      "description": "The default port is 3000.",
      "type": "integer",
      "default": 3000
    },
    "kind": {
      "type": "string",
      "description": "Provide the ub app type",
      "enum": ["api", "svc", "gateway"],
      "x-prompt": {
        "message": "Which type of ultimate backend app would you like to generate?",
        "type": "list",
        "items": [
          {
            "value": "api",
            "label": "API"
          },
          {
            "value": "svc",
            "label": "Service"
          },
          {
            "value": "gateway",
            "label": "Gateway"
          }
        ]
      }
    },
    "transport": {
      "type": "array",
      "description": "What kind of service to service communication",
      "x-prompt": {
        "message": "What transport protocol for service to service communication?",
        "type": "list",
        "multiselect": true,
        "items": [
          {
            "value": "rest",
            "label": "REST"
          },
          {
            "value": "grpc",
            "label": "GRPC"
          },
          {
            "value": "graphql",
            "label": "GraphQL"
          }
        ]
      }
    },
    "features": {
      "type": "array",
      "description": "What UB features do you need in app",
      "x-prompt": {
        "message": "What features do you want to add in app. (can do it later)?",
        "type": "list",
        "multiselect": true,
        "items": ["auth", "multi-tenancy"]
      }
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add dependencies to package.json."
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "eslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the application (used for linting)"
    }
  },
  "required": []
}
